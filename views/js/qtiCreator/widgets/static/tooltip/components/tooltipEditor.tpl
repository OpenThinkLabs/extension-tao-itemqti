<div class="qti-tooltip-editor">
    <input title="{{__ 'Tooltip target' }}" type="text" value="{{target}}" class="tooltip-editor-target" />
    <div data-html-editable-container="true">
        <div title="{{__ 'Tooltip content' }}" class="tooltip-editor-content" data-html-editable="true">{{{content}}}</div>
    </div>
    <button class="btn-info small widget-ok" data-edit="active" style="display: inline-block;">done</button>
</div>
